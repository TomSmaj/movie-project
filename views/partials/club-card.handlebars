{{!-- 
VARIABLES USED
movie club names = movie_club_name
current movie being discussed = current_movie
pervious movie discussion = prev_movie 
--}}

<a href="">
    <div class="container current_discussion">
        <div class="row">
            <div class="col l1 s1 offset-1 film-strip"></div>
            <div class="col l7 s7">
                <h4 class="black-text">{{group.name }} </h4>
                <h5>Now Showing:</h5>
                <p>{{discussion.movie}}</p>
                <h5>Discussion starts:</h5>
                <p>{{discussion.start_date}}</p>
            </div>
            <div class="col l4 s4 valign-wrapper" id="poster">
                {{!-- ?? How to link image from url href ?? --}}
                <img class="responsive-img poster" src="{{}}">
            </div>
        </div>
    </div>
</a>

